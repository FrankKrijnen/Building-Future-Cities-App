
@{
    ViewBag.Title = "Configuration";
}

<h2>Configuratie overzicht</h2>

<br />


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">

    @foreach(var config in ViewBag.ConfigurationList)
    {
        <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h4 class="card-title">@config.RoomName</h4>
                <div class="card-text">
                    <h5 class="card-subtitle">Huidig concept:</h5>
                    <p class="small">SCI output: @config.CurrentConceptSCI</p>
                    <p class="small">Co2: @config.CurrentConceptCO2 kg Co2</p>
                </div>

                <div class="card-text">
                    <h5 class="card-subtitle">Nieuw concept:</h5>
                    <p class="small">SCI output: @config.NewConceptSCI</p>
                    <p class="small">Co2: @config.NewConceptCO2 kg Co2</p>
                </div>
            </div>
        </div>
    
    }
</div>






